<!DOCTYPE html>
<html>
  <head>
    <title>Calculadora</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="/javascripts/calculadora.js"></script>
  </head>
  <body>
    <div class="calculadora">
     <div class="input__calculadora">
      <div class="previous__value">123 +</div>
      <div class="current__value">234</div>
     </div>
      <div class="buttons">
        <button class="button__calculadora" id="mas" value="+">+</button>
        <button class="button__calculadora" id="menos" value="-">-</button>
        <button class="button__calculadora" id="por" value="x">x</button>
        <button class="button__calculadora" id="division" value="/">/</button>
        <button class="button__calculadora" id="division" value="%">%</button>
        <button class="button__calculadora numbers" id="uno" value="1">1</button>
        <button class="button__calculadora numbers" id="2" value="2">2</button>
        <button class="button__calculadora numbers" id="3" value="3">3</button>
        <button class="button__calculadora numbers" id="4" value="4">4</button>
        <button class="button__calculadora numbers" id="5" value="5">5</button>
        <button class="button__calculadora numbers" id="6" value="6">6</button>
        <button class="button__calculadora numbers" id="7" value="7">7</button>
        <button class="button__calculadora numbers" id="8" value="8">8</button>
        <button class="button__calculadora numbers" id="9" value="9">9</button>
        <button class="button__calculadora numbers" id="0" value="0">0</button>
        <button class="button__calculadora result" id="igual">=</button>
      </div>
    </div>
  </body>
</html>
